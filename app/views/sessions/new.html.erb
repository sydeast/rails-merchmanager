<div>
    <h1>Login</h1>
</div>

<div>
<%= flash[:message] if flash[:message] %>

    <%= form_tag('/login', method: 'post' ) do %>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
    <% end %>

</div>