<div>
<h1>Create your new account here!</h1>
</div>


    <%= form_for(@user, url:'/signup') do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email, required:true %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>


    <%= f.submit "Submit" %>
    <% end %>
